      "textTemplate": "Add to Flomo",
      "configFields": [
        {
          "key": "webhookUrl",
          "label": "Flomo Webhook URL",
          "type": "text",
          "placeholder": "https://flomoapp.com/iwh/xxx/yyy/",
          "required": true,
          "description": "Get your webhook URL from Flomo settings (完整的 webhook 地址)"
