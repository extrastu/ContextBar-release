      "id": "translate",
      "name": "Translate",
      "icon": "https://translate.google.com/favicon.ico",
      "enabled": false,
      "category": "translation",
      "type": "api",
      "apiEndpoint": "https://translation.googleapis.com/language/translate/v2",
      "apiMethod": "POST",
      "textTemplate": "Translate text",
      "configFields": [
        {
          "key": "apiKey",
          "label": "Google Cloud API Key",
          "type": "password",
          "placeholder": "Enter your API key",
          "required": true,
          "description": "Get your API key from Google Cloud Console"
        },
        {
          "key": "targetLanguage",
          "label": "Target Language",
          "type": "text",
          "placeholder": "en",
          "required": false,
          "description": "Language code (e.g., en, zh, ja)"
        }
      ],
      "config": {
        "apiKey": "",
        "targetLanguage": "en"
      }
    },

